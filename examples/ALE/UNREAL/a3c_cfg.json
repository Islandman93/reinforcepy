{
  "rom_args": {
    "rom": "../roms/breakout.bin",
    "resize_shape": [84, 84],
    "skip_frame": 4,
    "repeat_action_probability": 0.0,
    "loss_of_life_termination": false,
    "step_cap": 10000
  },
  "learner_args": {
    "phi_length": 4,
    "async_update_step": 20,
    "reward_clip_vals" : [-1, 1],
    "random_policy": false,
    "dataset_size": 2000,
    "batch_size": 20,
    "reward_pred_batch_size": 3,
    "auxiliary_tasks": ["reward_prediction", "pixel_control", "value_replay"]
  },
  "network_args": {
    "q_discount": 0.99,
    "entropy_regularization": 0.01,
    "initial_learning_rate": 0.0007,
    "learning_rate_decay" : 80000000
  },
  "num_threads": 32,
  "epochs": 80,
  "save_interval": 0.01,
  "logdir": "./runs/a3c"
}
